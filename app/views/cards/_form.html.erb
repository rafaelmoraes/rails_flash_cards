<h3>Deck: <%= card.deck.name %></h3>
<%= form_with(model: [card.deck, card], local: true) do |f| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :front %>
    <%= f.text_field :front %>
  </div>

  <div class="field">
    <%= f.label :back %>
    <%= f.text_field :back %>
  </div>

  <div class="field">
    <%= f.label :difficulty_level %>
    <%= f.collection_radio_buttons :difficulty_level,
      difficulty_levels_to_radio,
      :value,
      :label %>
  </div>

  <div class="field">
    <%= f.label :learned %>
    <%= f.check_box :learned %>
  </div>

  <div class="field">
    <%= f.label :views_count %>
    <span><%= card.views_count %></span>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
