<p id="notice"><%= notice %></p>

<h1>
  <%= @deck.name %>
</h1>

<div>
  <%= @deck.detail %>
</div>

<p>
  <strong>Total cards: </strong><%= @deck.cards_count %>
</p>

<table>
  <thead>
    <th><%= t('.table.card') %></th>
    <th colspan=3 ><%= t('.table.actions') %></th>
    <tbody>
      <% @deck.cards.each do |card| %>
        <tr>
          <td><%= card.front %></td>
          <td><%= link_to t('show'), [@deck, card] %></td>
          <td><%= link_to t('edit'), [:edit, @deck, card] %></td>
          <td><%= link_to t('destroy'),[@deck, card], method: :delete, data: {confirm: t('confirm_question')} %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<br/>

<%= link_to t('back'), :back %> |
<%= link_to t('edit'), [:edit, @deck] %> |
<%= link_to t('.table.add_card'), new_deck_card_path(@deck) %>
