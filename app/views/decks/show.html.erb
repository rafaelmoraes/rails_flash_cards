<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @deck.name %>
</p>

<p>
  <strong>Detail:</strong>
  <%= @deck.detail %>
</p>

<p>
  <strong>Total cards:</strong>
  <%= @deck.cards_count %>
</p>

<table>
  <thead>
    <th>Card</th>
    <th colspan=3 >Actions</th>
    <tbody>
      <% @deck.cards.each do |card| %>
        <tr>
          <td><%= card.front %></td>
          <td><%= link_to 'Show', [@deck, card] %></td>
          <td><%= link_to 'Edit', [:edit, @deck, card] %></td>
          <td><%= link_to 'Destroy',[@deck, card], method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<br/>

<%= link_to 'Add card', new_deck_card_path(@deck) %> |
<%= link_to 'Edit', [:edit, @deck] %> |
<%= link_to 'Back', decks_path %>
