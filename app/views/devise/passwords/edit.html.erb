<h2><%= t(".title") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t(".new_password") %>
    <%= f.required_password_field :password, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".confirm_new_password") %>
    <%= f.required_password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t(".change_password"), class: "btn btn-green btn-greater" %>
  </div>
<% end %>

<div class="actions-links">
  <%= render "devise/shared/links" %>
</div>
