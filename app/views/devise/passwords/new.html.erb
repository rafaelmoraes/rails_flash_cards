<h2><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.required_email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t('.request_reset_password'), class: "btn btn-green btn-greater" %>
  </div>
<% end %>

<div class="actions-links">
  <%= render "devise/shared/links" %>
</div>
