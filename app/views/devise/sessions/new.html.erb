<h2><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if devise_mapping.rememberable? -%>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :email %>
    <%= f.required_email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.required_password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn-blue btn-greater" %>
  </div>
<% end %>

<div class="actions-links">
  <%= render "devise/shared/links" %>
</div>
